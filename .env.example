# On-Device Assistant Environment Variables

# Google Cloud Configuration (Optional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
DIALOGFLOW_PROJECT_ID=your-dialogflow-project-id

# AI Configuration
ASSISTANT_MODELS__AI__USE_DIALOGFLOW=false
ASSISTANT_MODELS__AI__LOCAL_MODEL=facebook/blenderbot-400M-distill
ASSISTANT_MODELS__AI__BACKEND_PREFERENCE=local

# ============================================
# FREE API KEYS (India-focused)
# ============================================

# OpenWeatherMap API (FREE)
# Sign up: https://openweathermap.org/api
# Free tier: 1,000 calls/day, 60 calls/minute
# Default location: Muzaffarnagar, UP, India
OPENWEATHER_API_KEY=your-openweathermap-api-key

# NewsAPI.org (FREE)
# Sign up: https://newsapi.org/register
# Free tier: 100 requests/day
# Default country: India (IN)
NEWS_API_KEY=your-newsapi-key

# SETUP INSTRUCTIONS:
# 1. Get free OpenWeatherMap API key at: https://openweathermap.org/api
# 2. Get free NewsAPI key at: https://newsapi.org/register
# 3. Copy this file to .env and add your keys
# 4. The assistant works with demo data if no keys are provided

# Assistant Configuration
ASSISTANT_NAME=Jarvis
ASSISTANT_PERSONALITY=sophisticated
ASSISTANT_LANGUAGE=en

# Server Configuration
ASSISTANT_SERVER__HOST=127.0.0.1
ASSISTANT_SERVER__PORT=8000
ASSISTANT_SERVER__ENABLE_API_KEY=false
ASSISTANT_SERVER__API_KEY=

# Database Configuration
ASSISTANT_DATABASE__MEMORY_DB=data/memory.db
ASSISTANT_DATABASE__CACHE_DB=data/cache.db
ASSISTANT_DATABASE__VECTOR_INDEX=data/vectors.index

# Logging Configuration
ASSISTANT_LOGGING__LEVEL=INFO
ASSISTANT_LOGGING__FILE=data/logs/assistant.log
ASSISTANT_LOGGING__FORMAT=json

# Privacy Configuration
ASSISTANT_PRIVACY__LOCAL_ONLY=true
ASSISTANT_PRIVACY__ENCRYPT_MEMORY=true
ASSISTANT_PRIVACY__DATA_RETENTION_DAYS=30

# Performance Configuration
ASSISTANT_PERFORMANCE__MAX_CONCURRENT_ACTIONS=5
ASSISTANT_PERFORMANCE__MODEL_CACHE_SIZE=3
ASSISTANT_PERFORMANCE__LAZY_LOAD_MODELS=true

# Voice Configuration (Optional)
ASSISTANT_MODELS__STT__PROVIDER=google
ASSISTANT_MODELS__TTS__PROVIDER=google
ASSISTANT_MODELS__TTS__VOICE=en-US-Standard-A

# Vision Configuration
ASSISTANT_MODELS__VISION__ENABLED=true
ASSISTANT_MODELS__VISION__FACE_DETECTION=true
ASSISTANT_MODELS__VISION__OBJECT_DETECTION=true

# API Integration Toggles
ASSISTANT_APIS__WEATHER__ENABLED=true
ASSISTANT_APIS__NEWS__ENABLED=true
ASSISTANT_APIS__SEARCH__ENABLED=true
ASSISTANT_APIS__KNOWLEDGE__ENABLED=true
ASSISTANT_APIS__KNOWLEDGE__USE_WIKIPEDIA=true

# Safety Configuration
ASSISTANT_SAFETY__REQUIRE_CONFIRMATION_FOR_HIGH_RISK=true
ASSISTANT_SAFETY__SANDBOX_CODE_EXECUTION=true
ASSISTANT_SAFETY__MAX_CODE_EXECUTION_TIME=10
